{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "lib": [
      "esnext"
    ],
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "nodenext",
    "jsx": "preserve",
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": [
      "bun-types",
      "react-native"
    ],
    "outDir": "lib/dist-bun"
  },
  "include": [
    "./lib/src/**/*",
    "./__tests__",
    "./scripts"
  ]
}