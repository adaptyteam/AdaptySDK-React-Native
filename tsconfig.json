{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "pretty": true,
    "declaration": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noEmitOnError": true,
    "target": "ES5",
    "jsx": "react-native",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noImplicitOverride": true,
    "baseUrl": ".",
    "lib": [
      "ES2015"
    ],
    "outDir": "./lib/dist",
    "types": [
      "react-native"
    ],
    "paths": {
      "react-native-adapty": [
        "lib/src/"
      ],
      "react-native-adapty/*": [
        "lib/src/*"
      ]
    }
  },
  "include": [
    "./lib/src/**/*"
  ]
}